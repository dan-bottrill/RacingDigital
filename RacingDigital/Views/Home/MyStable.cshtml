@model RacingDigital.Models.HorseProfile
@{

}
<div id="stable-body">
    <h1 class="mb-3">My Stable</h1>
    <form asp-controller="MyStable" asp-action="SaveHorseDetails" method="post" class="p-4 bg-light rounded shadow-sm col-12">
        <h3 class="mb-4">Enter or Edit Racehorse Information</h3>

        <div class="row">
            <!-- Left Column -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="HorseName" class="form-label"></label>
                    <input asp-for="HorseName" class="form-control" />
                    <span asp-validation-for="HorseName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FoaledDate" class="form-label"></label>
                    <input asp-for="FoaledDate" class="form-control" type="date" />
                    <span asp-validation-for="FoaledDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RacesRun" class="form-label"></label>
                    <input asp-for="RacesRun" class="form-control" type="number" min="0" />
                    <span asp-validation-for="RacesRun" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RacesWon" class="form-label"></label>
                    <input asp-for="RacesWon" class="form-control" type="number" min="0" />
                    <span asp-validation-for="RacesWon" class="text-danger"></span>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Trainer" class="form-label"></label>
                    <input asp-for="Trainer" class="form-control" />
                    <span asp-validation-for="Trainer" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Jockey" class="form-label"></label>
                    <input asp-for="Jockey" class="form-control" />
                    <span asp-validation-for="Jockey" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Notes" class="form-label"></label>
                    <textarea asp-for="Notes" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
            </div>
        </div>

        <button id="mystable-submit" type="submit" class="btn btn-primary mt-3">Save Details</button>
        <button id="mystable-submit" type="submit" class="btn mt-3">Save Details</button>
    </form>

</div>



